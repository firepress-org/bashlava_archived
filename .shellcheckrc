# from fork https://github.com/ralish/bash-script-template/blob/main/.shellcheckrc

# Add the script directory to the search path for source statements
source-path=SCRIPTDIR

# Enable all checks (inc. optional)
enable=all

# Disable some checks
disable=SC1083
disable=SC1090
disable=SC1091
disable=SC2001
disable=SC2002
disable=SC2034
disable=SC2086
disable=SC2154
disable=SC2312
